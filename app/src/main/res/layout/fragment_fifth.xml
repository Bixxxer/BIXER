<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <Button
        android:id="@+id/button"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:text="Share" />

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="79dp"
        android:layout_toStartOf="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher_telegram" />

    <ImageButton
        android:id="@+id/imageButton3"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher_instagram" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="211dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="You can visit us below"
        android:textColor="#CCCCCC"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:background="@color/colorPrimary"
        app:srcCompat="@mipmap/ic_launcher_twitter" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="156dp"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:background="@color/colorPrimary"
        app:srcCompat="@mipmap/ic_launcher_new" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_toStartOf="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:background="@color/colorPrimary"
        app:srcCompat="@mipmap/ic_launcher_github" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="237dp"
        android:layout_height="44dp"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:text="Also you can share a link."
        android:textColor="#CCCCCC"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="155dp"
        android:layout_height="44dp"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"

        android:text="Thank you!"
        android:textColor="#CCCCCC"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        app:srcCompat="@mipmap/ic_launcher_facebook" />
</RelativeLayout>